<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black_green">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBarLayout"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/green_fluro">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageViewBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:padding="4dp"
                        android:src="@drawable/action_back_black"

                        />
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="15dp"
                        android:layout_centerVertical="true"
                        android:src="@drawable/icon1" />
                    <TextView
                        android:id="@+id/textViewTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="Mock Camera"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"/>
                </LinearLayout>


            </RelativeLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:scrollbars="none"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/appBarLayout"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Device details"
                    android:textAllCaps="true"
                    android:layout_gravity="center"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="400dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/edittext_rectangular_oval">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:weightSum="100">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"

                            android:layout_weight="90">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"

                            android:src="@drawable/white_icon"/>
                        <TextView
                            android:id="@+id/textViewCamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cam-A001"
                            android:textAllCaps="true"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:layout_marginLeft="5dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_weight="10">

                        <TextView
                            android:id="@+id/textViewOptions"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"

                            android:gravity="center"
                            android:layout_marginTop="5dp"
                            android:text="&#8942;"
                            android:textColor="@color/white"
                            android:textAppearance="?android:textAppearanceLarge" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Status"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textSize="13dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/textViewDeviceStatus"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Active"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textSize="13dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Last Updates :"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textSize="13dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"/>
                        <TextView
                            android:id="@+id/textViewDateTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="May 21,2019 11:00 AM"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textSize="13dp"
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/white"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/green_fluro"
                        android:layout_marginTop="10dp"
                        />
                   <!-- <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="20dp">
                        <TextView
                            android:id="@+id/textViewActivity"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Activity Log"
                            android:textAllCaps="false"
                            android:layout_gravity="center"
                            android:textSize="17dp"
                            android:textColor="@color/white"/>
